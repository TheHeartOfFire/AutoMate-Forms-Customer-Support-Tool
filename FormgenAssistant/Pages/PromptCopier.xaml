<UserControl x:Class="FormgenAssistant.Pages.PromptCopier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormgenAssistant.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF0F0B1E">
        <Button x:Name="btnOpen" Content="Open" HorizontalAlignment="Left" Margin="594,10,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" FontSize="18" Height="32" Click="btnOpen_Click"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Height="32" Margin="23,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="556" FontSize="18" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" IsReadOnly="True"/>
        <TextBox x:Name="txtUUID" HorizontalAlignment="Left" Height="32" Margin="23,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" FontSize="18" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" IsReadOnly="True"/>
        <Label Content="UUID" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}" Foreground="MediumSlateBlue" FontSize="20" Margin="23,47,0,0"/>
        <Button x:Name="btnUUIDGen" Content="Re-Generate" HorizontalAlignment="Left" Margin="378,89,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" FontSize="18" Height="32" Click="btnUUIDGen_Click"/>
        <ListBox x:Name="lboxPrompts" HorizontalAlignment="Left" Height="203" Margin="23,157,0,0" VerticalAlignment="Top" Width="377" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" SelectionMode="Multiple"/>
        <Button x:Name="btnDupePrompt" Content="Duplicate" HorizontalAlignment="Left" Margin="405,157,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" FontSize="18" Height="32" Click="btnDupePrompt_Click"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="647,10,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="MediumSlateBlue" FontSize="18" Height="32" Click="btnClose_Click"/>

    </Grid>
</UserControl>
