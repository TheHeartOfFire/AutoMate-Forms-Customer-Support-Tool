<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormgenAssistant"
             xmlns:Controls="clr-namespace:FormgenAssistant.Controls" x:Class="FormgenAssistant.SettingsPage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF0F0B1E">
        <Canvas>
            <Label Content="Home Page" Background="{x:Null}" Foreground="MediumSlateBlue" FontSize="20" Canvas.Left="10" Canvas.Top="10"/>
            <Separator Height="2" Canvas.Left="10" Canvas.Top="45" Width="182" Background="MediumSlateBlue" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="txtAddress" TextWrapping="Wrap" Text="Attn: AM Forms 300 State Street, #96020, Southlake, TX 76092" Width="424" Height="25" Padding="5,5,5,5" UseLayoutRounding="True" Background="#FF201938" BorderBrush="MediumSlateBlue" Foreground="White" HorizontalAlignment="Left" Canvas.Left="10" Canvas.Top="54" VerticalAlignment="Bottom">
                <TextBox.SelectionBrush>
                    <SolidColorBrush Color="#4CFFFFFF" Opacity="1"/>
                </TextBox.SelectionBrush>
            </TextBox>
            <Label Content="Notes" Background="{x:Null}" Foreground="MediumSlateBlue" FontSize="20" Canvas.Left="10" Canvas.Top="81" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Controls:ToggleSwitch x:Name="tglFormCodeCAPS" Height="22" Width="50" BorderThickness1="5" IsOn="True" Canvas.Left="10" Canvas.Top="126" MouseLeftButtonDown="tglFormCodeCAPS_MouseLeftButtonDown" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Separator Height="2" Canvas.Left="10" Canvas.Top="116" Width="146" Background="MediumSlateBlue" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Copy all on clear" Background="{x:Null}" Foreground="MediumSlateBlue" Canvas.Left="65" Canvas.Top="126" Height="24" Width="101" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="btnUpdateAddress" Content="Update" Canvas.Left="439" Canvas.Top="54" Height="25" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="White" Click="btnUpdateAddress_Click"/>
            <Button x:Name="btnRevertAddress" Content="Revert" Canvas.Left="487" Canvas.Top="54" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="MediumSlateBlue" Foreground="White" Click="btnRevertAddress_Click"/>
            <Label Content="Templates" Background="{x:Null}" Foreground="MediumSlateBlue" FontSize="20" Canvas.Left="10" Canvas.Top="170" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Controls:ToggleSwitch x:Name="tglSelectOnTemplateAdded" Height="22" Width="50" BorderThickness1="5" IsOn="True" Canvas.Left="10" Canvas.Top="212" HorizontalAlignment="Center" VerticalAlignment="Top" MouseLeftButtonDown="tglSelectOnTemplateAdded_MouseLeftButtonDown"/>
            <Separator Height="2" Canvas.Left="10" Canvas.Top="201" Width="245" Background="MediumSlateBlue" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Select new template after adding it." Background="{x:Null}" Foreground="MediumSlateBlue" Canvas.Left="65" Canvas.Top="210" Height="24" Width="198" HorizontalAlignment="Center" VerticalAlignment="Top"/>


        </Canvas>

    </Grid>
</UserControl>
