<Page x:Class="AMFormsCST.Desktop.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AMFormsCST.Desktop.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      xmlns:viewModels="clr-namespace:AMFormsCST.Desktop.ViewModels.Pages"
      xmlns:controls="clr-namespace:AMFormsCST.Desktop.Controls"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="DashboardPage"
      d:DataContext="{d:DesignInstance viewModels:DashboardViewModel, 
                                       IsDesignTimeCreatable=False}" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="False">

    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled" x:Name="OutermostGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:SymbolIcon Symbol="BuildingPeople20" Filled="True" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="64" Grid.Row="2" Grid.Column="2" Margin="0,0,15,0"/>
        <ui:SymbolIcon Symbol="Note24" Filled="True" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="64" Grid.Row="1" Margin="0,0,15,0"/>
        <ui:SymbolIcon Symbol="ContactCardGroup16" Filled="True" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="64" Grid.Row="2" Grid.Column="0" Margin="0,0,15,0"/>
        <ui:SymbolIcon Symbol="FormMultiple20" Filled="True" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="64" Grid.Row="1" Grid.Column="2" Margin="0,0,15,0"/>

        <Separator Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" Margin="5" BorderThickness="2"/>
        <Separator Grid.Row="1" HorizontalAlignment="Right" Margin="5" BorderThickness="2"/>
        <Separator Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="5" BorderThickness="2"/>
        <Separator Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Margin="5" BorderThickness="2"/>



        <controls:HorizontalRadioButtons Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" ItemsSource="{Binding Notes}" 
                             RadioButtonCommand="{Binding NoteClickedCommand}" 
                             CommandParameterPath="Id"
                             ContentBindingPath="CaseNumber"
                             ContentFallbackValue="Enter a Case Number..."
                             GroupName="CaseNumbers"
                                 RefreshTrigger="{Binding UiRefreshCounter}"
                                 DeleteCommand="{Binding DeleteItemClickedCommand}"/>


        <Grid  Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Label Content="Case #: " VerticalAlignment="Center" HorizontalAlignment="Center" />
                <ui:NumberBox Text="{Binding SelectedNote.CaseNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="150" PlaceholderText="Enter a case number..." MaxDecimalPlaces="0" Minimum="0" Maximum="1000000000" SpinButtonPlacementMode="Hidden" />

            </StackPanel>

            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="0"  Margin="0,0,0,10">
                <ui:Button Margin="0,0,5,0" Command="{Binding OpenTemplateDialogCommand}">
                    <ui:SymbolIcon Symbol="MailTemplate24" Filled="True" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24" />
                </ui:Button>
                <ui:Button Margin="0,0,5,0" Command="{Binding OpenCodeSnippetDialogCommand}">
                    <ui:SymbolIcon Symbol="Code20" Filled="True" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"/>
                </ui:Button>
                <ui:Button Margin="0,0,5,0" Command="{Binding LoadCaseCommand}" IsEnabled="False">
                    <ui:SymbolIcon Symbol="Open24" Filled="True" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"/>
                </ui:Button>
            </WrapPanel>

            <Label Content="Notes:"  Margin=" 0, 0, 0, 0" Grid.Row="1"/>
            <ui:TextBox Text="{Binding SelectedNote.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            AcceptsReturn="True" ClearButtonEnabled="True" VerticalAlignment="Stretch" Grid.Row="2"
                            Margin="0,0,0,10"/>
        </Grid>

        <Grid Margin="0,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <controls:HorizontalRadioButtons ItemsSource="{Binding SelectedNote.Dealers}" 
                                                         RadioButtonCommand="{Binding DealerClickedCommand}" 
                                                         CommandParameterPath="DataContext"
                                                         ContentBindingPath="CompositeDealerName"
                                                         ContentFallbackValue="Enter a Dealership Name..."
                                                         GroupName="DealerNames"
                                 RefreshTrigger="{Binding UiRefreshCounter}"
                                 DeleteCommand="{Binding DeleteItemClickedCommand}" Margin="0,0,0,5" Grid.ColumnSpan="2"/>

            <controls:HorizontalRadioButtons ItemsSource="{Binding SelectedNote.SelectedDealer.Companies}" 
                                                         RadioButtonCommand="{Binding CompanyClickedCommand}" 
                                                         CommandParameterPath="DataContext"
                                                         ContentBindingPath="CompositeCompanyName"
                                                         ContentFallbackValue="Enter a Company Number..."
                                                         GroupName="CompanyNames"
                                 RefreshTrigger="{Binding UiRefreshCounter}"
                                 DeleteCommand="{Binding DeleteItemClickedCommand}" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,0,0,5"/>

            <Label Content="Dealer/Group Name: " VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedDealer.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="180" Margin="0,0,0,0" Grid.Row="2" 
                        Grid.Column="1" HorizontalAlignment="Left"/>

            <Label Content="Server ID: " VerticalAlignment="Center" HorizontalAlignment="Right"  Grid.Row="3"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedDealer.ServerCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="64" Margin="0,0,0,0"  Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"/>

            <Label Content="Company Name: " VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="4"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedDealer.SelectedCompany.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="180" Margin="0,0,0,0" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"/>

            <Label Content="Company Number: " VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="5"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedDealer.SelectedCompany.CompanyCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="32" Margin="0,0,0,0" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"/>

        </Grid>


        <Grid Grid.Row="1" Grid.Column="3" Margin="0,0,0,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <controls:HorizontalRadioButtons ItemsSource="{Binding SelectedNote.Forms}" 
                                         RadioButtonCommand="{Binding FormClickedCommand}" 
                                         CommandParameterPath="DataContext"
                                         ContentBindingPath="Name"
                                         ContentFallbackValue="Enter a Form Name..."
                                         GroupName="FormNames"
                 RefreshTrigger="{Binding UiRefreshCounter}"
                 DeleteCommand="{Binding DeleteItemClickedCommand}" Margin="0,0,0,5" Grid.ColumnSpan="2"/>

            <controls:HorizontalRadioButtons ItemsSource="{Binding SelectedNote.SelectedForm.TestDeals}" 
                                         RadioButtonCommand="{Binding DealClickedCommand}" 
                                         CommandParameterPath="DataContext"
                                         ContentBindingPath="DealNumber"
                                         ContentFallbackValue="Enter a Deal Number..."
                                         GroupName="TestDeals"
                 RefreshTrigger="{Binding UiRefreshCounter}"
                 DeleteCommand="{Binding DeleteItemClickedCommand}" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,0,0,5"/>

            <Label Content="Name: " VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedForm.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                            ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="256" Margin="0,0,0,0"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"/>

            <Label Content="Deal#: " VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="3" Grid.Column="0"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedForm.SelectedTestDeal.DealNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                            ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="256" Margin="0,0,0,0"  Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"/>

            <Label Content="Notes: " VerticalAlignment="Top" HorizontalAlignment="Center"  Grid.Row="4" Grid.Column="0"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedForm.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="256" Margin="0,0,0,0" AcceptsReturn="True" MinHeight="100" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0" Grid.Row="5" Grid.Column="1">
                <Label Content="Pdf" VerticalAlignment="Center"/>
                <ui:ToggleSwitch Margin="5,0,5,0"/>
                <Label Content="Impact" Margin="0,0,5,0" VerticalAlignment="Center"/>
                <ToggleButton Margin="0,0,5,0" IsChecked="{Binding SelectedNote.SelectedForm.Notable, Mode=TwoWay}">
                    <ui:SymbolIcon Symbol="Note24" Filled="True" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"/>
                </ToggleButton>
                <ui:Button Margin="0,0,5,0" Command="{Binding OpenFormNameGeneratorDialogCommand}">
                    <ui:SymbolIcon Symbol="TextT12" Filled="True" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="24"/>
                </ui:Button>
            </StackPanel>
        </Grid>

        <Grid Margin="0,0,0,0" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <controls:HorizontalRadioButtons ItemsSource="{Binding SelectedNote.Contacts}" 
                                     RadioButtonCommand="{Binding ContactClickedCommand}" 
                                     CommandParameterPath="DataContext"
                                     ContentBindingPath="Name"
                                     ContentFallbackValue="Enter a Contact Name..."
                                     GroupName="ContactNames"
             RefreshTrigger="{Binding UiRefreshCounter}"
             DeleteCommand="{Binding DeleteItemClickedCommand}" Grid.ColumnSpan="2" Margin="0,0,0,5"/>

            <Label Content="Name: " VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"/>
            <ui:TextBox Text="{Binding SelectedNote.SelectedContact.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="256" Margin="0,0,0,0" Grid.Row="1" Grid.Column="1"/>

            <Label Content="Email: " VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" />
            <ui:TextBox Text="{Binding SelectedNote.SelectedContact.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="256" Margin="0,0,0,0" Grid.Row="2" Grid.Column="1" />

            <Label Content="Phone #: " VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.Row="3" Grid.Column="1">
                <ui:TextBox Text="{Binding SelectedNote.SelectedContact.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="128" Margin="0,0,0,0"/>
                <ui:TextBox Text="{Binding SelectedNote.SelectedContact.PhoneExtensionDelimiter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="32" Margin="15,0,15,0"/>
                <ui:TextBox Text="{Binding SelectedNote.SelectedContact.PhoneExtension, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ClearButtonEnabled="True" VerticalAlignment="Center" MinWidth="64" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>