<ui:FluentWindow
    x:Class="AMFormsCST.Desktop.Views.Dialogs.BugReportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AMFormsCST.Desktop.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:AMFormsCST.Desktop.ViewModels.Dialogs"
    Title="BugReportDialog"
    d:DataContext="{d:DesignInstance viewmodels:BugReportDialogViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
	WindowStyle="ToolWindow" Topmost="True" WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
        <Grid Name="CustomTitleBarArea" Height="32" VerticalAlignment="Top" Background="Transparent"
              MouseLeftButtonDown="CustomTitleBarArea_MouseLeftButtonDown"  HorizontalAlignment="Stretch"/>
        <Label Content="Report a Bug" Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
        <Label Margin="12,6,12,6" Content="Please provide as much detail as possible." Grid.Row="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>

        <ui:TextBox
            Margin="12,6,12,6"
            PlaceholderText="Issue Title"
            Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>

        <ui:TextBox
            Margin="12,6,12,6"
            MinHeight="100"
            AcceptsReturn="True"
            PlaceholderText="Describe the issue..."
            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" Grid.Row="4" 
		    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
		    VerticalAlignment="Stretch"/>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5" Margin="12,6,12,12">
		<ui:Button Content="Submit" Command="{Binding SubmitCommand}" Margin="0,0,10,0" MinWidth="80" IsDefault="True"
                           CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:FluentWindow}}}" x:Name="ConfirmButton"/>
                <ui:Button Content="Cancel" MinWidth="80" IsCancel="True"/>
    </StackPanel>
    </Grid>
</ui:FluentWindow>