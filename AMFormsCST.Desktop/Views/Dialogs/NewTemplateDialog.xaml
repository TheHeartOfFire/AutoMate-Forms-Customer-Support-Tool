<ui:FluentWindow x:Class="AMFormsCST.Desktop.Views.Dialogs.NewTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AMFormsCST.Desktop.Views.Dialogs"
        xmlns:viewModels="clr-namespace:AMFormsCST.Desktop.ViewModels.Dialogs"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:models="clr-namespace:AMFormsCST.Core.Types.BestPractices.TextTemplates.Models;assembly=AMFormsCST.Core" 
                 xmlns:sys="clr-namespace:System;assembly=System.Runtime"
                 mc:Ignorable="d"
        Title="Create New Template" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance viewModels:NewTemplateDialogViewModel}"
        WindowStyle="ToolWindow" Topmost="True" WindowBackdropType="Mica"
        ExtendsContentIntoTitleBar="True">
    <Grid>
        <Grid Name="CustomTitleBarArea" Height="32" VerticalAlignment="Top" Background="Transparent"
              MouseLeftButtonDown="CustomTitleBarArea_MouseLeftButtonDown" />

        <Grid Margin="15,40,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Template Name:"/>
            <ui:TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding TemplateName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Description:"/>
            <ui:TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding TemplateDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
            <Label Grid.Row="2" Grid.Column="0" Content="Type:"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="5"
                      ItemsSource="{Binding TemplateTypes}"
                      SelectedItem="{Binding TemplateType, Mode=TwoWay}" />

            <Label Grid.Row="3" Grid.Column="0" Content="Content:"/>
            <ui:TextBox Grid.Row="3" Grid.Column="1" Margin="5" Text="{Binding TemplateContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap" AcceptsReturn="True" MinHeight="150" VerticalScrollBarVisibility="Auto"/>

            <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <ui:Button Content="Create" Command="{Binding CreateCommand}" Margin="0,0,10,0" MinWidth="80" IsDefault="True"
                           CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ui:FluentWindow}}}" x:Name="ConfirmButton"/>
                <ui:Button Content="Cancel" MinWidth="80" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>