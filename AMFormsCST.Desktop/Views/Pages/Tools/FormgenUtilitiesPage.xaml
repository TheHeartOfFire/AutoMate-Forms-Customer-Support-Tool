<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AMFormsCST.Desktop.Views.Pages.Tools"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="AMFormsCST.Desktop.Views.Pages.Tools.FormgenUtilitiesPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormgenUtilitiesPage" d:DataContext="{d:DesignInstance IsDesignTimeCreatable=False, Type={x:Type local:FormgenUtilitiesPage}}">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <TreeView x:Name="FormgenFileTreeView" MaxWidth="250" MaxHeight="600" 
                      ScrollViewer.HorizontalScrollBarVisibility="Auto" Padding="0,0,10,0" 
                      SelectedItemChanged="FormgenFileTreeView_SelectedItemChanged" VerticalAlignment="Top">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding NodeName}" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,10,4" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
                <TreeViewItem Header="Sample Data" />
            </TreeView>
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <ui:Button Padding="2" Click="OpenButtonClick" >
                        <ui:SymbolIcon x:Name="OpenButtonIcon" Symbol="FolderOpen24" FontSize="64"/>
                    </ui:Button>
                </StackPanel>
                <StackPanel x:Name="RenameStackPanel" Orientation="Horizontal" Visibility="{Binding ViewModel.DebugVisibility}">
                    <Label Content="Rename" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,10,4" />
                    <ui:TextBox x:Name="RenameFormgenFileTextBox" PlaceholderText="Load a .formgen file to rename it." />
                </StackPanel>
                <StackPanel x:Name="RenameControlsStackPanel" Orientation="Horizontal" Visibility="{Binding ViewModel.DebugVisibility}">
                    <ui:SymbolIcon Symbol="ArrowTurnDownRight20" Foreground="White" FontSize="29" Margin="31,0,0,0" />
                    <Label Content="Image found?" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,3,4" />
                    <ui:SymbolIcon x:Name="ImageFoundFailedIcon" Symbol="Dismiss32" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="21" Foreground="Red" />
                    <ui:SymbolIcon x:Name="ImageFoundSuccessIcon" Symbol="Checkmark28" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="21" Foreground="#FF1FFF00" Visibility="Collapsed" />
                    <Label Content="Rename Image?" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="10,0,0,4" />
                    <CheckBox x:Name="RenameImageCheckBox" Padding="4,5,11,6"/>
                </StackPanel>
                <StackPanel x:Name="UUIDStackPanel" Orientation="Horizontal" Visibility="{Binding ViewModel.DebugVisibility}" >
                    <Label Content="UUID" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,10,4" />
                    <ui:TextBox x:Name="RegenerateUUIDTextBox" PlaceholderText="Load a .formgen file to regenerate its UUID" IsReadOnly="True" />
                </StackPanel>
                <ui:Button x:Name="RegenerateUUIDButton" Padding="2,0,2,0" Margin="43,0,0,0" Click="RegenerateUUIDButtonClick" Visibility="{Binding ViewModel.DebugVisibility}">
                    <ui:SymbolIcon Symbol="ArrowSync12" FontSize="27"/>
                </ui:Button>
                <ui:ProgressRing x:Name="ProgressRing" IsIndeterminate="True" Visibility="Collapsed" />
                <StackPanel x:Name="PropertiesStackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" CanHorizontallyScroll="True"/>
                <StackPanel x:Name="DebugStackPanel" Visibility="{Binding ViewModel.DebugVisibility}">
                    <Label Content="Debug Panel" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0,0,10,4" />
                    <StackPanel Orientation="Horizontal">
                        <ui:Button Content="Toggle Image Found" Click="Debug_ToggleImageFoundButtonClick"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
